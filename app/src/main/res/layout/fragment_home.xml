<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OvernightAI"
                android:textColor="@color/primary_tech_blue"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="-0.03" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Presenter!"
            android:textColor="@color/text_body"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-black"
            android:text="Let's Practice"
            android:textColor="@color/text_title"
            android:letterSpacing="-0.02"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_main_action"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_hero">

            <View
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/shape_circle_white_alpha"
                android:translationX="60dp"
                android:translationY="-60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_action_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="New\nRecording"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="AI ë°œí‘œ í‰ê°€ ì‹œìž‘í•˜ê¸°"
                android:textColor="#CCFFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_action_title" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/shape_circle_white_alpha"
                android:padding="14dp"
                android:src="@android:drawable/ic_btn_speak_now"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/card_main_action">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"

            app:cardElevation="0dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@color/shadow_soft_indigo"
            android:outlineSpotShadowColor="@color/shadow_soft_indigo"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/shape_circle_soft_blue"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="@color/primary_tech_blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Script"
                    android:textColor="@color/text_title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_script_desc"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_script_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ëŒ€ë³¸ ìž‘ì„±í•˜ê¸°"
                    android:textColor="@color/text_body"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"

            app:cardElevation="0dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@color/shadow_soft_indigo"
            android:outlineSpotShadowColor="@color/shadow_soft_indigo"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/shape_circle_soft_violet"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_compass"
                    app:tint="@color/accent_violet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guide"
                    android:textColor="@color/text_title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_guide_desc"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_guide_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="í‰ê°€ ê¸°ì¤€ í™•ì¸"
                    android:textColor="@color/text_body"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_rounded_background_soft"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tip."
            android:textStyle="bold"
            android:textColor="@color/primary_tech_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="ìžì‹ ê° ìžˆëŠ” ëª©ì†Œë¦¬ëŠ” ë†’ì€ ì ìˆ˜ë¥¼ ë°›ìŠµë‹ˆë‹¤."
            android:textColor="@color/text_body"
